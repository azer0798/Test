@import url('https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700&display=swap');

:root {
    --main-bg: #0b0e14; /* خلفية ليلية فخمة */
    --card-bg: #151921; /* لون البطاقات */
    --accent-color: #00d2ff; /* لون نيون هادئ */
    --text-color: #e2e8f0;
    --border-glow: rgba(0, 210, 255, 0.3);
}

body {
    background-color: var(--main-bg);
    color: var(--text-color);
    font-family: 'Cairo', sans-serif;
    margin: 0;
    padding: 0;
}

/* الهيدر الزجاجي */
header {
    background: rgba(21, 25, 33, 0.8) !important;
    backdrop-filter: blur(12px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    padding: 15px 5%;
}

/* تصغير وتجميل الأيقونات */
i {
    font-size: 16px;
    color: var(--accent-color);
    text-shadow: 0 0 10px var(--border-glow); /* توهج بسيط للأيقونة */
}

/* تصميم بطاقة الحسابات (Card) */
.account-card {
    background: var(--card-bg);
    border-radius: 20px;
    border: 1px solid rgba(255, 255, 255, 0.05);
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    position: relative;
}

.account-card:hover {
    transform: translateY(-8px);
    border-color: var(--accent-color);
    box-shadow: 0 10px 30px rgba(0, 210, 255, 0.1);
}

/* الأزرار العصرية */
.btn-buy {
    background: linear-gradient(135deg, #00d2ff 0%, #3a7bd5 100%);
    border: none;
    border-radius: 12px;
    color: white;
    font-weight: 700;
    padding: 10px 20px;
    cursor: pointer;
    transition: 0.3s;
    text-decoration: none;
    display: inline-block;
    font-size: 14px;
}

.btn-buy:hover {
    box-shadow: 0 0 20px var(--border-glow);
    filter: brightness(1.1);
}

/* تأثير الحالة (متاح / تم البيع) */
.status-tag {
    position: absolute;
    top: 15px;
    right: 15px;
    background: rgba(0, 0, 0, 0.6);
    backdrop-filter: blur(5px);
    padding: 5px 12px;
    border-radius: 50px;
    font-size: 12px;
    border: 1px solid rgba(255, 255, 255, 0.1);
}

/* القائمة الجانبية (Sidebar) */
.sidebar {
    background: var(--card-bg) !important;
    border-right: 1px solid rgba(255, 255, 255, 0.05);
}

.sidebar a {
    color: #a0aec0;
    padding: 12px 20px;
    display: flex;
    align-items: center;
    gap: 10px;
    text-decoration: none;
    transition: 0.3s;
}

.sidebar a:hover {
    background: rgba(0, 210, 255, 0.05);
    color: var(--accent-color);
}
