<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WassitDZ Game | متجر الحسابات</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root { 
            --primary: <%= settings.themeColor || '#007bff' %>; 
            --bg-body: #f4f6f8;
        }
        
        body { background: var(--bg-body); font-family: 'Segoe UI', sans-serif; padding-top: 40px; margin: 0; overflow-x: hidden; }

        /* الهيدر مع زر القائمة */
        .header-main { 
            background: #fff; padding: 15px 20px; border-bottom: 1px solid #eee;
            display: flex; align-items: center; justify-content: space-between;
            position: sticky; top: 40px; z-index: 1000;
        }
        .header-main img { max-height: 60px; width: auto; }

        .menu-btn {
            background: #fff; border: 1px solid #eee; padding: 10px 15px;
            border-radius: 8px; cursor: pointer; color: #333; font-size: 20px;
        }

        /* القائمة الجانبية (Sidebar) */
        .sidebar {
            position: fixed; top: 0; right: -280px; width: 280px; height: 100%;
            background: #fff; z-index: 3000; transition: 0.4s ease;
            box-shadow: -5px 0 15px rgba(0,0,0,0.1); padding: 20px;
        }
        .sidebar.active { right: 0; }
        
        .sidebar-overlay {
            position: fixed; top: 0; left: 0; width: 100%; height: 100%;
            background: rgba(0,0,0,0.5); z-index: 2999; display: none;
        }
        .sidebar-overlay.active { display: block; }

        .sidebar-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 30px; border-bottom: 1px solid #eee; padding-bottom: 15px; }
        .sidebar-link {
            display: block; padding: 15px; color: #333; text-decoration: none;
            font-weight: bold; border-radius: 10px; margin-bottom: 10px; transition: 0.3s;
        }
        .sidebar-link:hover { background: #f8f9fa; color: var(--primary); }
        .sidebar-link i { margin-left: 10px; width: 20px; text-align: center; }

        /* باقي التنسيقات (البحث والبطاقات) */
        .top-notice { background: #000; color: #fff; height: 40px; line-height: 40px; position: fixed; top: 0; width: 100%; z-index: 2000; font-size: 13px; font-weight: bold; text-align: center; }
        .search-container { max-width: 800px; margin: 30px auto; padding: 0 15px; }
        .filter-input { border: 2px solid #eee; border-radius: 12px; padding: 12px; font-size: 15px; background: #fff; }
        
        .product-card { background: #fff; border-radius: 15px; border: 1px solid #edf2f7; transition: 0.3s; position: relative; overflow: hidden; height: 100%; }
        .product-img-box { height: 170px; background: #f9f9f9; }
        .product-img-box img { width: 100%; height: 100%; object-fit: cover; }
        .product-price { font-size: 18px; font-weight: 800; color: #2ecc71; margin-top: 10px; }
        .btn-order-now { background: #000; color: #fff; width: 100%; border: none; padding: 10px; border-radius: 10px; font-weight: bold; }
    </style>
</head>
<body>

    <div class="top-notice"><marquee direction="right"><%= settings.announcement %></marquee></div>

    <header class="header-main">
        <div class="logo">
            <a href="/"><img src="<%= settings.logoUrl %>" alt="Logo"></a>
        </div>
        <button class="menu-btn" onclick="toggleSidebar()">
            <i class="fas fa-bars"></i>
        </button>
    </header>

    <div class="sidebar-overlay" id="overlay" onclick="toggleSidebar()"></div>
    <div class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <h5 class="fw-bold m-0">القائمة</h5>
            <button class="btn-close" onclick="toggleSidebar()"></button>
        </div>
        <a href="/" class="sidebar-link"><i class="fas fa-home"></i> الرئيسية</a>
        <a href="<%= settings.mediationLink %>" class="sidebar-link"><i class="fas fa-shield-alt"></i> قسم الوساطة</a>
        <a href="<%= settings.sellAccountLink %>" class="sidebar-link"><i class="fas fa-plus-circle"></i> بيع حسابك</a>
        <a href="<%= settings.supportLink %>" class="sidebar-link"><i class="fas fa-headset"></i> الدعم الفني</a>
        <hr>
        <div class="p-2 text-center small text-muted">تابعنا على وسائل التواصل</div>
    </div>

    <div class="container">
        <div class="search-container">
            <div class="row g-2">
                <div class="col-8"><input type="number" id="idSearch" class="filter-input w-100" placeholder="البحث برقم الـ ID..."></div>
                <div class="col-4">
                    <select id="filterType" class="filter-input w-100 fw-bold">
                        <option value="all">الكل</option>
                        <option value="Id Konami">Id Konami</option>
                        <option value="Google Play">Google Play</option>
                    </select>
                </div>
            </div>
        </div>

        <div class="row g-3" id="grid">
            <% accounts.forEach(acc => { %>
            <div class="col-6 col-md-4 col-lg-3 acc-item" data-id="<%= acc.id %>" data-link="<%= acc.linkType %>">
                <div class="product-card shadow-sm">
                    <a href="/account/<%= acc.id %>" style="text-decoration: none; color: inherit;">
                        <div class="product-img-box"><img src="<%= acc.imgs[0] %>" loading="lazy"></div>
                        <div class="p-3 text-center">
                            <span class="text-primary fw-bold small">#<%= acc.id %></span>
                            <h6 class="text-truncate fw-bold my-1"><%= acc.title %></h6>
                            <div class="product-price"><%= acc.priceDZ %> د.ج</div>
                        </div>
                    </a>
                    <div class="px-3 pb-3">
                        <button onclick="contact('<%= acc.id %>')" class="btn-order-now">شراء الآن</button>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
    </div>

    <script>
        // وظيفة فتح وإغلاق النافذة الجانبية
        function toggleSidebar() {
            document.getElementById('sidebar').classList.toggle('active');
            document.getElementById('overlay').classList.toggle('active');
        }

        // وظيفة الفلترة
        function filter() {
            const id = document.getElementById('idSearch').value;
            const type = document.getElementById('filterType').value;
            document.querySelectorAll('.acc-item').forEach(el => {
                const mId = id === "" || el.dataset.id === id;
                const mTy = type === "all" || el.dataset.link === type;
                el.style.display = (mId && mTy) ? "block" : "none";
            });
        }
        document.getElementById('idSearch').oninput = filter;
        document.getElementById('filterType').onchange = filter;

        // وظيفة التواصل
        function contact(id) {
            const link = "<%= settings.buyNowLink %>";
            const msg = encodeURIComponent("سلام عليكم، أريد شراء الحساب رقم: #" + id);
            if (link.includes("wa.me")) window.open(link.split('?')[0] + "?text=" + msg, "_blank");
            else if (link.includes("t.me")) window.open("https://t.me/" + link.split('/').pop() + "?text=" + msg, "_blank");
            else window.open(link, "_blank");
        }
    </script>
</body>
</html>
