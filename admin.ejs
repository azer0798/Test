<tbody>
    <% accounts.forEach(acc => { %>
    <tr>
        <td class="fw-bold">#<%= acc.id %></td>
        <td><img src="<%= acc.imgs[0] %>" width="40" height="40" style="object-fit: cover; border-radius: 5px;"></td>
        <td class="small"><%= acc.title %></td>
        <td><span class="badge <%= acc.status === 'متاح' ? 'bg-success' : 'bg-danger' %>"><%= acc.status %></span></td>
        <td>
            <a href="/toggle-status/<%= acc.id %>" class="btn btn-sm btn-dark"><i class="fas fa-sync"></i></a>
            <a href="/delete-account/<%= acc.id %>" class="text-danger ms-2" onclick="return confirm('حذف؟')"><i class="fas fa-trash"></i></a>
        </td>
    </tr>
    <% }) %>
</tbody>
