<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <title>إدارة WassitDZ</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css" rel="stylesheet">
</head>
<body class="p-4 bg-light">
    <div class="container">
        <h2 class="mb-4 text-center fw-bold">لوحة تحكم المتجر</h2>

        <div class="card p-4 mb-4 shadow-sm border-0">
            <h5>إعدادات الموقع وسعر الصرف</h5>
            <form action="/update-settings" method="POST">
                <div class="row g-2">
                    <div class="col-md-3"><label>سعر الدولار</label><input type="number" name="usdRate" class="form-control" value="<%= settings.usdRate %>"></div>
                    <div class="col-md-3"><label>رابط الدعم</label><input type="text" name="supportLink" class="form-control" value="<%= settings.supportLink %>"></div>
                    <div class="col-md-3"><label>رابط الوساطة</label><input type="text" name="mediationLink" class="form-control" value="<%= settings.mediationLink %>"></div>
                    <div class="col-md-3"><label>بيع حسابك</label><input type="text" name="sellAccountLink" class="form-control" value="<%= settings.sellAccountLink %>"></div>
                    <div class="col-md-12 mt-2"><label>الإعلان المتحرك</label><input type="text" name="announcement" class="form-control" value="<%= settings.announcement %>"></div>
                    <button class="btn btn-success mt-3">حفظ الإعدادات</button>
                </div>
            </form>
        </div>

        <div class="card p-4 mb-4 shadow-sm border-0">
            <h5>إضافة حساب جديد</h5>
            <form action="/add-account" method="POST" enctype="multipart/form-data">
                <div class="row g-2">
                    <div class="col-md-6"><input type="text" name="title" class="form-control" placeholder="اسم الحساب" required></div>
                    <div class="col-md-3"><input type="text" name="priceDZ" class="form-control" placeholder="السعر دج"></div>
                    <div class="col-md-3"><input type="text" name="priceUSD" class="form-control" placeholder="السعر $"></div>
                    <div class="col-md-6"><input type="text" name="coins" class="form-control" placeholder="الكوينز"></div>
                    <div class="col-md-6"><input type="text" name="gems" class="form-control" placeholder="المجوهرات"></div>
                    <div class="col-md-12"><input type="file" name="imageFiles" class="form-control" multiple required></div>
                    <button class="btn btn-primary mt-3">نشر الحساب</button>
                </div>
            </form>
        </div>

        <div class="card p-4 shadow-sm border-0 mb-4">
            <h5>الحسابات المنشورة</h5>
            <table class="table">
                <% accounts.forEach(acc => { %>
                <tr>
                    <td><img src="<%= acc.imgs[0] %>" width="50"></td>
                    <td><%= acc.title %></td>
                    <td><a href="/toggle-status/<%= acc.id %>" class="btn btn-sm <%= acc.status === 'متاح' ? 'btn-success' : 'btn-warning' %>"><%= acc.status %></a></td>
                    <td><a href="/delete-account/<%= acc.id %>" class="btn btn-danger btn-sm">حذف</a></td>
                </tr>
                <% }) %>
            </table>
        </div>

        <div class="card p-4 shadow-sm border-0">
            <h5>الأسئلة الشائعة</h5>
            <form action="/add-faq" method="POST" class="mb-3">
                <input type="text" name="question" class="form-control mb-2" placeholder="السؤال">
                <textarea name="answer" class="form-control mb-2" placeholder="الجواب"></textarea>
                <button class="btn btn-dark">إضافة سؤال</button>
            </form>
            <% faqs.forEach(f => { %>
                <div class="d-flex justify-content-between border-bottom py-2">
                    <span><%= f.question %></span>
                    <a href="/delete-faq/<%= f._id %>" class="btn btn-danger btn-sm">حذف</a>
                </div>
            <% }) %>
        </div>
    </div>
</body>
</html>
